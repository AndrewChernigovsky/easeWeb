//- text 
mixin pText
    p(class=className)
        if block
            block
        
mixin spanText
    span(class=className)
        if block
            block

//- links
mixin aLink(urlLink, className, ...links)
    each link in links
        a(href=urlLink, class=className)= link

//- titles

mixin h1(className, text)
    h1(class=className)= text

mixin h2(className, text)
    h2(class=className)= text